# HermitClaw Environment Variables
# Copy this file to .env and fill in the values

# -----------------------------------------------
# REQUIRED: 32-byte (64-char hex) master encryption key
# Generate with: openssl rand -hex 32
# -----------------------------------------------
MASTER_PEARL=

# -----------------------------------------------
# Database connection
# -----------------------------------------------
# DB_PASSWORD is used by Docker Compose for the PostgreSQL container.
# Make sure it matches the password in DATABASE_URL.
DB_PASSWORD=securepass
DATABASE_URL=postgresql://hermit:${DB_PASSWORD}@localhost:5432/hermitclaw

# -----------------------------------------------
# Server config (optional)
# -----------------------------------------------
# Admin API Key (secures management APIs and UI)
# Generate a secure key, e.g. with: openssl rand -base64 32
ADMIN_API_KEY=

PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# -----------------------------------------------
# Model proxy (Phase 8A)
# URL for Ollama running on Mac host (Apple Silicon)
# -----------------------------------------------
OLLAMA_BASE_URL=http://host.docker.internal:11434
