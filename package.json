{
  "name": "hermitclaw",
  "version": "0.1.0",
  "description": "A secure tool execution gateway and credential vault for AI agents",
  "private": true,
  "type": "module",
  "scripts": {
    "postinstall": "prisma generate",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@fastify/static": "^9.0.0",
    "@prisma/client": "6.19.2",
    "fastify": "^5.0.0",
    "pino-pretty": "^13.1.3",
    "undici": "^7.22.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "prisma": "6.19.2",
    "tsx": "^4.0.0",
    "typescript": "^5.6.0",
    "vitest": "^4.0.18"
  }
}
